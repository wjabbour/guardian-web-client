{
  "name": "backend",
  "version": "1.0.1",
  "description": "Guardian Backend Services",
  "main": "index.js",
  "scripts": {
    "build": "tsc -noEmit",
    "pre-deploy": "npm run build && npm run build --workspaces && cd terraform && terraform init",
    "deploy": "npm run deploy-standard && npm run deploy-cannon",
    "deploy-standard": "npm run pre-deploy && cd terraform && terraform workspace select standard && terraform apply -auto-approve -var-file=tfvars/standard.tfvars",
    "deploy-cannon": "npm run pre-deploy && cd terraform && terraform workspace select cannon && terraform apply -auto-approve -var-file=tfvars/cannon.tfvars"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/aws-lambda": "^8.10.131",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.5",
    "aws-lambda": "^1.0.7",
    "esbuild": "^0.19.11",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@aws-sdk/client-apigatewaymanagementapi": "^3.496.0",
    "@aws-sdk/client-dynamodb": "^3.496.0",
    "@aws-sdk/client-scheduler": "^3.496.0",
    "@aws-sdk/client-secrets-manager": "^3.496.0",
    "@aws-sdk/client-ses": "^3.496.0",
    "@aws-sdk/client-sqs": "^3.496.0",
    "@aws-sdk/lib-dynamodb": "^3.496.0",
    "@aws-sdk/util-dynamodb": "^3.496.0",
    "axios": "^1.6.5",
    "dayjs": "^1.11.10",
    "dotenv": "^16.3.2",
    "google-auth-library": "^9.4.2",
    "guardian-common": "file:../common",
    "ics": "^3.7.2",
    "jsonwebtoken": "^9.0.2",
    "parse-multipart": "^1.0.4",
    "pino": "^8.17.2",
    "qs": "^6.11.2",
    "stripe": "^14.13.0"
  },
  "workspaces": [
    "src/public/*"
  ]
}
